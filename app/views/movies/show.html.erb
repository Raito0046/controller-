<h1><%= @movie.title %> <small class="text-muted">(<%= @movie.release_year %>)</small></h1>

<div class="mb-3">
  <h5>Director</h5>
  <p><%= @movie.director %></p>

  <h5>Rating</h5>
  <p><span class="badge bg-secondary"><%= @movie.rating %></span></p>
</div>

<%= render partial: "movie", locals: { movie: @movie } %>

<%= link_to "Back to Movies", movies_path, class: "btn btn-outline-primary mt-3" %>
